{
    "version": "0.2.0",
    "configurations": [
      {
        "name": "Debug C Program",
        "type": "cppdbg",
        "request": "launch",
        "program": "${workspaceFolder}/tp2virtual",
        "args": ["fifo", "./logs/simulador.log", "4", "64"],
        "stopAtEntry": true,
        "cwd": "${workspaceFolder}",
        "environment": [],
        "externalConsole": false,
        "MIMode": "gdb",
        "miDebuggerPath": "/usr/bin/gdb",
        "setupCommands": [
          {
            "description": "Enable pretty-printing for gdb",
            "text": "-enable-pretty-printing",
            "ignoreFailures": true
          }
        ]
      }
    ]
  }
  